@model RestaurangGuiden.Models.Meny

@{
    Layout = "_Layout"; 
}

<
<body class="Admin-index">

    <div class="container mt-5">
        <h1 class="text-center">Lägg till Meny</h1>

        <form asp-action="CreateMeny" method="post" class="mt-4">
            <input type="hidden" asp-for="RestaurangId" /> 

            <div class="form-group">
                <label for="Rätt">Rätt</label>
                <input type="text" class="form-control" asp-for="Rätt" placeholder="Ange rättens namn" />
                <span asp-validation-for="Rätt" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label for="Pris">Pris</label>
                <input type="number" step="0.01" class="form-control" asp-for="Pris" placeholder="Ange pris" />
                <span asp-validation-for="Pris" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success mt-4">Spara</button>
            <a class="btn btn-secondary mt-4" asp-action="Index">Avbryt</a>
        </form>
    </div>

</body>

